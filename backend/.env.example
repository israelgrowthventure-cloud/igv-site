# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
DB_NAME=igv_production

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Email Configuration (SendGrid recommended)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key-here
EMAIL_FROM=noreply@israelgrowthventure.com

# Google Calendar Configuration
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key-here
CALENDAR_EMAIL=israel.growth.venture@gmail.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://israelgrowthventure.com,https://www.israelgrowthventure.com,http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=admin@israelgrowthventure.com
ADMIN_PASSWORD=your-secure-admin-password
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
BOOTSTRAP_TOKEN=your-bootstrap-token-for-initial-setup

# Optional: Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PDF_GENERATION=true
ENABLE_EMAIL_SENDING=true
ENABLE_CALENDAR_EVENTS=true

# Development/Production Mode
ENVIRONMENT=production
DEBUG=false
